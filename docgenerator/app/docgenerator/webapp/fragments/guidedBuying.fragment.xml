<core:FragmentDefinition xmlns:unified="sap.ui.unified" xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>


  <Dialog
    id="idFieldConfigDialog"
    title="Field Configuration"
    contentWidth="40%">
    <content>
      <VBox class="sapUiSmallMargin">
        <unified:FileUploader
          id="idGuidedBuyingFileUploader"
          name="file"
          width="100%"
          tooltip="Select file (CSV / JSON / TXT)"
          placeholder="Choose a CSV / JSON / TXT file..." />
      </VBox>
    </content>
    <endButton>
      <Button text="Upload" press=".onUploadConvert" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>